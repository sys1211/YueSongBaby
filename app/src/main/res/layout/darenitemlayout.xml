<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/gou"
            android:id="@+id/sydr_img1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/sydr_img2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/touxiang"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="174dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/sydr_img3"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_master_focused_selected"
            android:layout_alignTop="@+id/sydr_tv1"
            android:layout_alignRight="@id/sydr_img1"
            android:layout_alignEnd="@id/sydr_img1"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="狗狗"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/sydr_tv1"
            android:layout_alignBottom="@id/sydr_img2"
            android:layout_toRightOf="@id/sydr_img2"
            android:layout_toEndOf="@id/sydr_img2" />
        <TextView
            android:id="@+id/sydr_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汪汪汪"
            android:layout_below="@id/sydr_tv1"
            android:layout_centerHorizontal="true" />
</RelativeLayout>
